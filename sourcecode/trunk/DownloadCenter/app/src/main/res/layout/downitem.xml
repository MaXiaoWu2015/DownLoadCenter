<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/recyclerview_item_padding_left"
    android:paddingTop="@dimen/recyclerview_item_padding_top"
    android:paddingRight="@dimen/recyclerview_item_padding_right"
    android:paddingBottom="@dimen/recyclerview_item_padding_bottom"
    >
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/recyclerview_item_name_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recyclerview_item_text_size"
        android:textColor="@color/white"

        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_size"
        android:layout_width="@dimen/recyclerview_item_size_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recyclerview_item_text_size"
        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/recyclerview_item_ll_padding_left">
    <TextView
        android:id="@+id/tv_state"
        android:layout_width="@dimen/recyclerview_item_state_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recyclerview_item_text_size"
        android:textColor="@color/white"
        android:singleLine="true" />
    <TextView
        android:id="@+id/tv_completed"
        android:layout_width="@dimen/recyclerview_item_completed_width"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/recyclerview_item_text_size" />
    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="@dimen/recyclerview_item_speed_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recyclerview_item_text_size"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="150dp"
        android:visibility="gone"
        android:src="@drawable/more"
        />
</LinearLayout>
