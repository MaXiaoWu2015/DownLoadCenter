<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menu"
        android:layout_width="@dimen/menu_width"
        android:layout_height="match_parent"
        android:background="#b3000000"
        android:visibility="visible"
        android:layout_gravity="right"
        android:orientation="vertical">

        <com.konka.android.kkui.lib.KKButton
            android:layout_marginTop="@dimen/menu_btn_margin_top"
            android:id="@+id/btn_operation"
            style="@style/menu_btnStyle"
            android:background="@drawable/menu_btn_back"
            android:textColor="@drawable/menu_btn_text_color"
            android:text="@string/pause"
            />
        <com.konka.android.kkui.lib.KKButton
            android:id="@+id/btn_del"
            android:text="@string/delete"
            style="@style/menu_btnStyle"
            android:textColor="@drawable/menu_btn_text_color"
            android:background="@drawable/menu_btn_back"
            />
    </LinearLayout>
